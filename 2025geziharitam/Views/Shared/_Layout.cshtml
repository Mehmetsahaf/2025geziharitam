<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kültürüm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #34495e;
            --accent-color: #6f9c76;
        }

        /* Navbar Styles */
        .navbar {
            background-color: var(--primary-color);
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
            padding: 1rem 0;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: white !important;
        }

        .nav-link {
            color: rgba(255,255,255,.8) !important;
            font-weight: 500;
            transition: color 0.3s ease;
            padding: 0.5rem 1rem !important;
            margin: 0 0.2rem;
        }

        .nav-link:hover {
            color: white !important;
        }

        /* Footer Styles */
        .footer {
            background-color: var(--secondary-color);
            color: white;
            padding: 3rem 0;
            margin-top: 2rem;
        }

        .footer h5 {
            color: var(--accent-color);
            font-weight: bold;
            margin-bottom: 1.5rem;
        }

        .footer-links {
            list-style: none;
            padding: 0;
        }

        .footer-links li {
            margin-bottom: 0.8rem;
        }

        .footer-links a {
            color: rgba(255,255,255,.8);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .footer-links a:hover {
            color: white;
        }

        .social-icons a {
            color: rgba(255,255,255,.8);
            font-size: 1.5rem;
            margin-right: 1rem;
            transition: color 0.3s ease;
        }

        .social-icons a:hover {
            color: white;
        }

        .copyright {
            background-color: var(--primary-color);
            color: rgba(255,255,255,.6);
            padding: 1rem 0;
            text-align: center;
        }

        /* Main Content */
        main {
            min-height: calc(100vh - 350px);
            padding: 2rem 0;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-globe-americas"></i> 2025 Gezi Haritam 
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Blog" asp-action="Index">Gezi Blogum</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">Hakkımızda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">İletişim</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5>Hakkımızda</h5>
                    <p>Türkiye'nin kültürel mirasını ve şehirlerini keşfetmenize yardımcı olan dijital platformunuz.</p>
                    <div class="social-icons">
                        <a href="#"><i class="bi bi-facebook"></i></a>
                        <a href="#"><i class="bi bi-twitter"></i></a>
                        <a href="#"><i class="bi bi-instagram"></i></a>
                        <a href="#"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <h5>Hızlı Bağlantılar</h5>
                    <ul class="footer-links">
                        <li><a href="#">Ana Sayfa</a></li>
                        <li><a href="#">Şehirler</a></li>
                        <li><a href="#">Kültürel Miras</a></li>
                        <li><a href="#">Etkinlikler</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h5>İletişim</h5>
                    <ul class="footer-links">
                        <li><i class="bi bi-person"></i> Mehmet Sahaf Bayrakçı</li>
                        <li><i class="bi bi-envelope"></i> 132230034@ogr.uludag.edu.tr</li>
                        <li><i class="bi bi-instagram"></i> @@mehmetsahaf</li>
                        <li><i class="bi bi-geo-alt"></i> Bursa Uludağ Üniversitesi İnegöl İşletme Fakültesi</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="copyright mt-4">
            <div class="container">
                <p class="mb-0">&copy; @DateTime.Now.Year 2025 Gezi Haritam. Tüm hakları saklıdır.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
